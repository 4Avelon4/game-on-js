.btn
  cursor pointer
  font-weight 700
  font-size 14px
  color text-color
  background-color accent-color
  border none
  border-radius 20px
  padding 20px 54px
  max-width 290px
  transition color, 0.2s

  +sm()
    padding 24px 75px
    font-size 16px

  &:hover,
  &:focus
    outline none
    background-color hover-color

  &:active
    background-color active-btn-color

  &:disabled
    background-color disabled-color
