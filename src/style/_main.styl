.memory-game
  &__cards
    list-style()
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    margin 0 auto
    padding 0
    width var(--container-width)
    height var(--container-width)
    perspective calc(3000px + (var(--card-count) * 100px))

  &__card
    width calc(100% / var(--card-count) - var(--card-padding) * 2px)
    height calc(100% / var(--card-count) - var(--card-padding) * 2px)
    margin calc(var(--card-padding) * 1px)
    position relative
    box-shadow 1px 1px 1px rgba(0, 0, 0, 0.3)
    transform-style preserve-3d
    transition all 0.5s
    transform scale(1)

    &.flip
      transform rotateY(180deg)

    &:active
      transform scale(0.97)
      transition transform 0.2s

.card__front-face
.card__back-face
  width 100%
  height 100%
  padding 10px
  position absolute
  border-radius calc(var(--container-width) / (var(--card-count) * 20))
  background accent-color
  backface-visibility hidden

  &:hover
    cursor pointer

.card
  &__front-face
    display flex
    justify-content center
    align-items center
    font-size 90px
    font-weight 700
    transform rotateY(180deg)
    font-size calc(var(--container-width) / (var(--card-count) * 2))
    user-select none

  &__back-face
    padding calc(var(--container-width) / (var(--card-count) * 16))

.end-game
  display none
  justify-content center
  font-size 40px
  font-weight 700
  color text-color
